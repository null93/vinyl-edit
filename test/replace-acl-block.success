vcl 6.0;

backend default {
    .host = "127.0.0.1";
    .port = "8080";
}

acl purge {
    "127.0.0.1";
    "localhost";
}

sub vcl_recv {
    if (req.url ~ "^/api/") {
        set req.http.X-API = "true";
    }
}
